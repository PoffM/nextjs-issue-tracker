{
  "name": "nextjs-issue-tracker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "prisma migrate deploy && next build",
    "db-up": "docker compose up -d && sh ./prisma/wait-for-postgres.sh",
    "db-nuke": "docker compose down --remove-orphans",
    "dev": "npm run db-up && prisma migrate dev && prisma db seed && next dev",
    "start": "next start",
    "lint": "eslint src",
    "lint-fix": "lint --fix",
    "test-dev": "dotenv -c test start-server-and-test dev 3000 test:e2e",
    "test-start": "npm run db-up && dotenv -c test npm run build && dotenv -c test prisma db seed && dotenv -c test start-server-and-test start 3000 test:e2e",
    "test:e2e": "playwright test",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.1",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^4.11.0",
    "@rehooks/local-storage": "^2.4.4",
    "@tanstack/react-query": "^4.28.0",
    "@tanstack/react-query-devtools": "^4.28.0",
    "@tanstack/react-table": "^8.8.4",
    "@trpc/client": "10.18.0",
    "@trpc/next": "10.18.0",
    "@trpc/react-query": "10.18.0",
    "@trpc/server": "10.18.0",
    "clsx": "^1.2.1",
    "focus-trap-react": "^10.1.1",
    "lodash": "^4.17.21",
    "next": "13.2.4",
    "next-auth": "4.20.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.43.8",
    "react-icons": "^4.8.0",
    "react-intersection-observer": "^9.4.3",
    "react-select": "^5.7.2",
    "react-textarea-autosize": "^8.4.1",
    "superjson": "^1.12.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.1",
    "@types/lodash": "^4.14.192",
    "@types/node": "18.15.10",
    "@types/react": "18.0.30",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "autoprefixer": "^10.4.14",
    "daisyui": "^2.51.5",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "playwright": "^1.32.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "prisma": "^4.11.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.2.7",
    "tsx": "^3.12.6",
    "typescript": "5.0.2"
  }
}
