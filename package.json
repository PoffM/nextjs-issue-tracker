{
  "name": "nextjs-issue-tracker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "prisma migrate deploy && next build",
    "db-up": "docker compose up -d && sh ./prisma/wait-for-postgres.sh",
    "db-nuke": "docker compose down --remove-orphans",
    "dev": "npm run db-up && prisma migrate dev && prisma db seed && next dev",
    "start": "next start",
    "lint": "eslint src",
    "lint-fix": "lint --fix",
    "test-dev": "dotenv -c test start-server-and-test dev 3000 test:e2e",
    "test-start": "npm run db-up && dotenv -c test npm run build && dotenv -c test prisma db seed && dotenv -c test start-server-and-test start 3000 test:e2e",
    "test:e2e": "playwright test",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^4.16.2",
    "@tanstack/react-query": "^4.29.19",
    "@tanstack/react-query-devtools": "^4.29.19",
    "@tanstack/react-table": "^8.9.3",
    "@trpc/client": "10.33.0",
    "@trpc/next": "10.33.0",
    "@trpc/react-query": "10.33.0",
    "@trpc/server": "10.33.0",
    "clsx": "^1.2.1",
    "focus-trap-react": "^10.1.4",
    "lodash": "^4.17.21",
    "next": "13.4.7",
    "next-auth": "4.22.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.45.1",
    "react-icons": "^4.10.1",
    "react-intersection-observer": "^9.5.2",
    "react-select": "^5.7.3",
    "react-textarea-autosize": "^8.5.0",
    "superjson": "^1.12.4",
    "usehooks-ts": "^2.9.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@types/lodash": "^4.14.195",
    "@types/node": "20.3.3",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "autoprefixer": "^10.4.14",
    "daisyui": "^2.51.6",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "playwright": "^1.35.1",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "^4.16.2",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.2",
    "tsx": "^3.12.7",
    "typescript": "5.1.6"
  }
}
