{
  "name": "nextjs-issue-tracker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "prisma migrate deploy && next build",
    "db-up": "docker compose up -d && sh ./prisma/wait-for-postgres.sh",
    "db-nuke": "docker compose down --volumes --remove-orphans",
    "dev": "npm run db-up && prisma migrate dev && prisma db seed && next dev",
    "start": "next start",
    "lint": "eslint src",
    "lint-fix": "lint --fix",
    "test-dev": "dotenv -c test start-server-and-test dev 3000 test:e2e",
    "test-start": "npm run db-up && dotenv -c test npm run build && dotenv -c test prisma db seed && dotenv -c test start-server-and-test start 3000 test:e2e",
    "test:e2e": "playwright test",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^4.7.1",
    "@rehooks/local-storage": "^2.4.4",
    "@tanstack/react-query": "^4.19.1",
    "@tanstack/react-query-devtools": "^4.19.1",
    "@tanstack/react-table": "^8.7.0",
    "@trpc/client": "10.4.3",
    "@trpc/next": "10.4.3",
    "@trpc/react-query": "10.4.3",
    "@trpc/server": "10.4.3",
    "clsx": "^1.2.1",
    "focus-trap-react": "^10.0.2",
    "lodash": "^4.17.21",
    "next": "13.0.6",
    "next-auth": "4.18.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.40.0",
    "react-icons": "^4.7.1",
    "react-intersection-observer": "^9.4.1",
    "react-select": "^5.7.0",
    "react-textarea-autosize": "^8.4.0",
    "superjson": "^1.12.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "18.11.11",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.45.1",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.42.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.29.0",
    "eslint-config-next": "^13.0.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "playwright": "^1.28.1",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "prisma": "^4.7.1",
    "start-server-and-test": "^1.15.1",
    "tailwindcss": "^3.2.4",
    "tsx": "^3.12.1",
    "typescript": "4.9.3"
  }
}
