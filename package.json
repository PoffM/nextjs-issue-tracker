{
  "name": "nextjs-issue-tracker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "prisma migrate deploy && next build",
    "db-up": "docker-compose up -d && wait-on --verbose tcp:5832 && npm run init-db",
    "init-db": "cat ./prisma/initdb.sql | docker-compose exec -T postgres psql -U postgres",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dev": "npm run db-up && prisma migrate dev && prisma db seed && next dev",
    "start": "next start",
    "lint": "eslint src",
    "lint-fix": "lint --fix",
    "test-dev": "dotenv -c test start-server-and-test dev 3000 test:e2e",
    "test-start": "dotenv -c test npm run build && dotenv -c test start-server-and-test start 3000 test:e2e",
    "test:e2e": "playwright test",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^4.6.1",
    "@rehooks/local-storage": "^2.4.4",
    "@tanstack/react-query": "^4.16.1",
    "@tanstack/react-query-devtools": "^4.16.1",
    "@tanstack/react-table": "^8.5.30",
    "@trpc/client": "10.0.0",
    "@trpc/next": "10.0.0",
    "@trpc/react-query": "10.0.0",
    "@trpc/server": "10.0.0",
    "clsx": "^1.2.1",
    "focus-trap-react": "^10.0.1",
    "lodash": "^4.17.21",
    "next": "13.0.4",
    "next-auth": "^4.17.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.39.5",
    "react-icons": "^4.6.0",
    "react-intersection-observer": "^9.4.1",
    "react-select": "^5.6.1",
    "react-textarea-autosize": "^8.4.0",
    "superjson": "^1.11.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.0",
    "@types/lodash": "^4.14.189",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.41.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.28.0",
    "eslint-config-next": "^13.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "playwright": "^1.28.0",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.6.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.2.4",
    "tsx": "^3.12.1",
    "typescript": "4.9.3",
    "wait-on": "^6.0.1"
  }
}
